
<div class="d-flex justify-content-center h-100">
  <div class="card">
    <div class="card-header">
      <h3>Sign in</h3>
      <div class="d-flex justify-content-end social_icon">
        <span><i class="fas fa-home"></i></span>
      </div>
    </div>
    <div class="card-body">
      <div class="text-center">
        <button class="btn btn-google login_btn" onclick="window.location='<%= user_google_oauth2_omniauth_authorize_path %>';"><i class="fab fa-google mr-2"></i> Sign in with Google</button>
      </div>
      <br>
      <div class="or-seperator"><i>or</i></div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="input-group form-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fa fa-user"></i></span>
          </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control', placeholder: "Email" %>
        </div>
        <div class="input-group form-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-key"></i></span>
          </div>
    <%= f.password_field :password, autocomplete: "current-password", class:'form-control', placeholder: "Password" %>
  </div>
  <% if devise_mapping.rememberable? %>
          <div class="row align-items-center remember">
      <%= f.check_box :remember_me %>Remember Me
    </div>
  <% end %>
        <div class="form-group">
    <%= f.submit "Sign in", class: 'btn float-right login_btn' %><br>
        </div>
<% end %>
</div>
    <div class="card-footer">
      <div class="d-flex justify-content-center links">
        New user?<%= link_to "Create an account", new_user_registration_path %>
      </div>
      <div class="d-flex justify-content-center links">
        Forgot your password?<%= link_to "Recover", new_password_path(resource_name) %>
      </div>
    </div>
</div>
</div>
<%= render "devise/shared/error_messages", resource: resource %>