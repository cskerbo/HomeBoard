<div class="d-flex justify-content-center h-100">
      <div class="card">
        <div class="card-header">
          <h3>Sign up</h3>
          <div class="d-flex justify-content-end social_icon">
            <span><i class="fas fa-home"></i></span>
          </div>
        </div>
        <div class="card-body">
          <div class="text-center">
            <button class="btn btn-google login_btn" onclick="window.location='<%= user_google_oauth2_omniauth_authorize_path %>';"><i class="fab fa-google mr-2"></i> Sign up with Google</button>
          </div>
          <br>
          <div class="or-seperator"><i>or</i></div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="input-group form-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-user"></i></span>
              </div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "Email" %>
            </div>
            <div class="input-group form-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-key"></i></span>
              </div>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "Password" %>
            </div>
            <div class="input-group form-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-key"></i></span>
              </div>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "Confirm Password" %>
            </div>
            <div class="form-group">
              <%= f.submit "Sign up", class: 'btn float-right login_btn' %><br>
            </div>
            <% end %>
        </div>
        <div class="card-footer">
          <div class="d-flex justify-content-center links">
            Already registered?<%= link_to "Log in", new_user_session_path %>
          </div>
        </div>
      </div>
 </div>

