
      <div class="card-body">


<%= form_for [@user, @home] do |f| %>
    <% if @home.errors.any? %>
      <div id="error_explanation">
        <h4 class="text-danger">
          <%= pluralize(@home.errors.count, "error") %> prohibited this home from being saved:
        </h4>

        <ul>
          <% @home.errors.full_messages.each do |message| %>
            <li class="text-danger font-weight-bold"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
          <h4><b>Home Information</b></h4>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.hidden_field :user_id, value: "#{@user.id}"  %>
          <%= f.label :name, "Home Name", class: "bmd-label-floating" %>
          <%= f.text_field :name, class: "form-control", :required => true %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :street, "Street", class: "bmd-label-floating" %>
          <%= f.text_field :street, class: "form-control", :required => true %>
        </div>
      </div>
    </div>
    <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :city, "City", class: "bmd-label-floating" %>
              <%= f.text_field :city, class: "form-control", :required => true %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :zip_code, "Zip Code", class: "bmd-label-floating" %>
              <%= f.number_field :zip_code, class: "form-control", :required => true %>
            </div>
          </div>
    </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :state, "State", class: "bmd-label" %><br>
        <%= f.select :state, options_for_select(@states, @home.state), {}, {class: "form-control",  required: true, placeholder: "Select State"} %>
      </div>
    </div>
  </div>
          <h4><b>Widgets</b></h4>
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <%= f.label :weather_widget, "Weather Widget", class: "bmd-label" %><br>
                <%= f.hidden_field :weather_widget, value: "false"  %>
                <%= f.check_box :weather_widget, {class: "form-control"}, true, false %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <%= f.label :pet_widget, "Pet Widget", class: "bmd-label" %><br>
                <%= f.hidden_field :pet_widget, value: "false"  %>
                <%= f.check_box :pet_widget, {class: "form-control"}, true, false %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <%= f.label :list_widget, "List Widget", class: "bmd-label" %><br>
                <%= f.hidden_field :list_widget, value: "false"  %>
                <%= f.check_box :list_widget, {class: "form-control"}, true, false %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <%= f.label :hue_widget, "Philips Hue Widget", class: "bmd-label" %><br>
                <%= f.hidden_field :hue_widget, value: "false"  %>
                <%= f.check_box :hue_widget, {class: "form-control"}, true, false %>
              </div>
            </div>
          </div>
    <%= f.submit class: "btn btn-primary pull-right" %>
  <div class="clearfix"></div>
<% end %>
      </div>

