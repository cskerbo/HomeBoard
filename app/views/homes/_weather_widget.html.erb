<div class="col-lg-4 col-md-6 col-sm-6">
  <div class="card card-stats">
    <div class="card-header card-header-success card-header-icon">
      <div class="card-icon">
        <img class="d-md-block mx-auto" src="http://openweathermap.org/img/wn/<%= @weather_widget.weather_icon %>.png" alt="">
      </div>
      <h3 class="card-title"><%= @home.city %> Weather</h3>
      <br>
      <div class="row">
        <div class="col-sm-6">
          <p class="card-category">Current Status:</p>
        </div>
        <div class="col-sm-6">
          <p class="card-category" style="text-align: center"><%= @weather_widget.weather_description.titleize %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <p class="card-category">Temperature:</p>
        </div>
        <div class="col-sm-6">
          <p class="card-category" style="text-align: center"><%= @weather_widget.current_temp.round %>°</p>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <p class="card-category">Feels Like:</p>
        </div>
        <div class="col-sm-6">
          <p class="card-category" style="text-align: center"><%= @weather_widget.feels_like.round %>°</p>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <p class="card-category">Sunrise:</p>
        </div>
        <div class="col-sm-6">
          <p class="card-category" style="text-align: center"><%= Time.at(@weather_widget.sunrise).strftime("%I:%M %P") %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <p class="card-category" >Sunset:</p>
        </div>
        <div class="col-sm-6">
          <p class="card-category" style="text-align: center"><%= Time.at(@weather_widget.sunset).strftime("%I:%M %P") %></p>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <div class="stats">
        <i class="material-icons">date_range</i> Updated: <%= @weather_widget.updated_at %>
      </div>
    </div>
  </div>
  </div>
