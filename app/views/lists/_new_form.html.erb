<div class="card-body">
  <%= form_for [@user, @home, @new_list] do |f| %>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.hidden_field :home_id, value: "#{@home.id}"  %>
          <%= f.label :name, "List Name", class: "bmd-label-floating" %>
          <%= f.text_field :name, class: "form-control", :required => true, placeholder: 'ex. "Grocery List", "To-Do"' %>
          <br>
          <%= f.submit "Create a New List", class: "btn btn-primary pull-right" %>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
  <% end %>
</div>
